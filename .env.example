MSG_FOOTER=2026 VIP Lounge Platform. All rights reserved.
MSG_CONTACT=Fale Conosco

# ========================================
# COMPORTAMENTO - Customizar UX
# ========================================
ENABLE_DEBUG=true
LANGUAGE=pt-BR
CONDO_ID_REQUIRED=false
DEFAULT_CONDO_ID=
REDIRECT_ON_SUCCESS=
REDIRECT_ON_ERROR=
SHOW_USER_ID=true
AUTO_CLOSE_MODAL_SECONDS=0

# ========================================
# VALIDAÇÃO - Customizar regras
# ========================================
MAX_RETRIES=3

# ========================================
# SEGURANÇA - Customizar proteções
# ========================================
CORS_ORIGINS=*
REQUIRE_HTTPS=false
CSP_ENABLED=false

# ========================================
# INTEGRAÇÕES - APIs
# ========================================
SUPERLOGICA_URL=https://api.superlogica.net/v2/condor
SUPERLOGICA_APP_TOKEN=seu-app-token-aqui
SUPERLOGICA_ACCESS_TOKEN=seu-access-token-aqui

REDE_PARCERIAS_URL=https://api.staging.clubeparcerias.com.br/api-client/v1
REDE_PARCERIAS_BEARER_TOKEN=seu-jwt-bearer-token-aqui

# ========================================
# DATABASE
# ========================================
DB_TYPE=firestore
DB_COLLECTION_NAME=leads
GOOGLE_CLOUD_PROJECT=seu-projeto-gcp

# ========================================
# SERVER
# ========================================
PORT=8080
LOG_LEVEL=INFO
